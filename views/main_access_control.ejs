<% include partials/header %>
<% include partials/nav %>
<% var data = JSON.stringify(officer_details); %>
<script>
  $(function () {
    var data = <%- data %>;
    $("#mainAcTable").bootstrapTable({ data: data });
    $("#mainAcTable").on('click-cell.bs.table', function (field, columnName, valueClicked, data) {
      window.location.href = "/access_control/" + data.nric + "/";
    });
  })
</script>
<div class="container-fluid">
  <h4 class="mt-4">Access Control - Select Officer</h4>
  <hr>
  
  <table class="table table-hover table-bordered table-striped mx-auto" id="mainAcTable" data-search="true"
    data-pagination="true">
    <thead class="thead-light">
      <tr>
        <th data-field="name" data-sortable="true">Name</th>
        <th data-field="nric" data-sortable="true">NRIC</th>
        <th data-field="cert_card_no" data-sortable="true">Certification Card No.</th>
        <th data-field="designation" data-sortable="true">Designation</th>
      </tr>
    </thead>
  </table>

</div>

<% include partials/footer %>