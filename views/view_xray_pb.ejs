<script>
  function UNIXConverter(UNIX_timestamp) {
    try {
      if (UNIX_timestamp == 0) {
        return "";
      }
      var a = new Date(UNIX_timestamp * 1000);
      var months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
      var year = a.getFullYear();
      var month = a.getMonth() + 1;
      var date = a.getDate();
      var hour = a.getHours();
      var min = a.getMinutes();
      var sec = a.getSeconds();
      var time = date + '/' + month + '/' + year;
      return time;
    } catch (error) {
      return "";
    }
  }

  $(document).ready(function () { // the whole function below sets the value of the Xray HBS (from firebase) to the various textboxes. this is a neater way to do it as compared to doing it in the value fields.
    $('input[name=overall_status][value=' +<%=xray_pb_details.overall_status %> +']').attr('checked', 'checked');
    $('input[name=xray_pb_theory_status][value=' +<%=xray_pb_details.theory.status %> +']').attr('checked', 'checked');
    $('input[name=xray_pb_iit_status][value=' +<%=xray_pb_details.iit.status %> +']').attr('checked', 'checked');

    $('input[name=certified_date]').val(UNIXConverter(<%=xray_pb_details.certified_date %>));
    $('input[name=xray_pb_theory]').val(UNIXConverter(<%=xray_pb_details.theory.date %>));
    $('input[name=xray_pb_iit]').val(UNIXConverter(<%=xray_pb_details.iit.date %>));

    $("#PBForm").on("submit", function (e) { // this part of the code is for the confirmation alert when pressing the edit or delete button.
      var alert = confirm("Are you sure you want to edit/delete the Xray PB?");
      if (alert == true) {
        return true;
      } else {
        e.preventDefault();
        return false;
      }
    });
  });
</script>
<div class="container-fluid">

  <h4 class="mt-4">Xray PB Record</h4>
  <hr>

  <form action='/xray_pb/<%=officer_details.nric%>/<%=xray_pb_id%>' method="POST" id="PBForm">
    <div class="card d-flex mx-auto mb-5">
      <div class="card-header text-left">
        <div class="d-sm-flex flex-sm-row">
          <div class="mr-auto">
            <h6 class="mb-2 font-weight-bold">Name:
              <%=officer_details.fname%>
              <%=officer_details.lname%>
            </h6>
            <p class="mb-2">NRIC:
              <%=officer_details.nric%>
            </p>

            <div class="mb-2">
              Status:&nbsp;
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="overall_status" id="passStatus" value="1">
                <label class="form-check-label" for="passStatus">Pass</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="overall_status" id="failStatus" value="0">
                <label class="form-check-label" for="failStatus">Fail</label>
              </div>
            </div>
          </div>

          <div>

            <div>
              <label for="xray_pb_certified_date" class="font-weight-bold">Certified Date:</label>
              <div class="input-group mb-3">
                <input type="text" class="form-control datepicker" name="certified_date" id="xray_pb_certified_date"
                  value="" required>
                <div class="input-group-append">
                  <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
      <div class="card-body">

        <div class="row mb-2 justify-content-center">
          <div class="col-sm-4">
            <label class="font-weight-bold" for="xray_pb_theory">Theory:&nbsp;</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="xray_pb_theory_status" id="xray_pb_theory_pass" value="1">
              <label class="form-check-label" for="xray_pb_theory_pass">Pass</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="xray_pb_theory_status" id="xray_pb_theory_fail" value="0">
              <label class="form-check-label" for="xray_pb_theory_fail">Fail</label>
            </div>
            <div class="input-group mb-3">
              <input type="text" class="form-control datepicker" name="xray_pb_theory" id="xray_pb_theory" value=""
                required>
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <label class="font-weight-bold" for="xray_pb_iit">IIT:&nbsp;</label>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="xray_pb_iit_status" id="xray_pb_iit_pass" value="1">
              <label class="form-check-label" for="xray_pb_iit_pass">Pass</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="xray_pb_iit_status" id="xray_pb_iit_fail" value="0">
              <label class="form-check-label" for="xray_pb_iit_fail">Fail</label>
            </div>
            <div class="input-group mb-3">
              <input type="text" class="form-control datepicker" name="xray_pb_iit" id="xray_pb_iit" value="" required>
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
              </div>
            </div>
          </div>

        </div>

      </div>

      <% if (user.role == 1) { %>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary btn-block" name="edit_btn">Update</button>
        <button type="submit" class="btn btn-danger btn-block" name="delete_btn">Delete</button>
      </div>
      <% } %>
    </div>


  </form>
</div>

