              <label class="form-check-label" for="xray_cargo_iit_pass">Pass</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="xray_cargo_iit_status" id="xray_cargo_iit_fail" value="0">
