<head>
  <script>
    function UNIXConverter(UNIX_timestamp) {
      try {
        if (UNIX_timestamp == 0 || isNaN(UNIX_timestamp)) {
          return "-";
        }
        var a = new Date(UNIX_timestamp * 1000);
        var year = a.getFullYear();
        var month = a.getMonth() + 1;
        var date = a.getDate();
        if (month < 10) {
          month = "0" + month;
        }
        if (date < 10) {
          date = "0" + date;
        }
        var time = date + '/' + month + '/' + year;
        return time;
      } catch (error) {
        return "";
      }
    }

    $(document).ready(function () {

      $("#setall_btn").click(function () { // set all function for GS/AC/X-Ray HBS.
        var setall_date = $('input[name=setall_date]').val();
        var setall_status = $('input[name=setall_overall_status]:checked').val();

        $('input[name=overall_status][value=' + setall_status + ']').attr('checked', 'checked');
        $('input[name=xray_cargo_theory_status][value=' + setall_status + ']').attr('checked', 'checked');
        $('input[name=xray_cargo_etd_status][value=' + setall_status + ']').attr('checked', 'checked');
        $('input[name=xray_cargo_iit_status][value=' + setall_status + ']').attr('checked', 'checked');

        $('input[name=certified_date]').datepicker("setDate", setall_date);
        $('input[name=xray_cargo_theory]').datepicker("setDate", setall_date);
        $('input[name=xray_cargo_etd]').datepicker("setDate", setall_date);
        $('input[name=xray_cargo_iit]').datepicker("setDate", setall_date);
      });

    });
  </script>
</head>
<div class="container-fluid">
