<% include partials/header %>
<% include partials/nav %>

<div class="container-fluid">
  <div class="row">
    &nbsp;
  </div>

  <h4 style="text-align:center;">List of Officers</h4>
  <hr>
  <div class="row">
    <table class="table table-hover table-striped table-responsive-sm col-sm-10 mx-auto">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>NRIC</th>
          <th>Certification Card No.</th>
          <th>Designation</th>
        </tr>
      </thead>
      <% for (var key in officer_details) { %>
      <tr class='clickable-row' data-href='/officers/<%=key%>/'>
        <td>
          <%=officer_details[key].fname%>
          <%=officer_details[key].lname%>
        </td>
        <td>
          <%=key%>
        </td>
        <td>
          <%=officer_details[key].cert_card_no%>
        </td>
        <td>
          <%=officer_details[key].designation%>
        </td>
      </tr>
      <% } %>
    </table>
  </div>

  <div class="mb-4 col-11 mx-auto">
    <% if (user.role == 1) { %>
    <a href="new/" class="btn btn-primary col-sm-6">Add New Officer</a>
    <% } %>
    <br />
    <a href="#" class="btn btn-primary col-sm-3">Expiring Certification</a>
    <a href="#" class="btn btn-primary col-sm-3">Security Tests & Breach Failures</a>
  </div>
</div>

<% include partials/footer %>